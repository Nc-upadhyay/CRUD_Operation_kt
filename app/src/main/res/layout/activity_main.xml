<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/title"
        android:textAlignment="center"
        android:textSize="20sp"

        />

    <EditText
        android:id="@+id/edittext_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:hint="Name "
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_bk"

        />

    <EditText
        android:id="@+id/edittext_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext_name"
        android:layout_marginTop="15dp"
        android:hint="Password "
        android:inputType="textPassword"
        android:textSize="20sp"
        android:background="@drawable/edit_bk"

        />

    <EditText
        android:id="@+id/edittext_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext_pass"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_bk"
        android:hint="Phone "
        android:inputType="phone"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/edittext_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext_phone"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_bk"
        android:hint="Note "
        android:textSize="20sp" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submint_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_below="@+id/edittext_note"
        android:text="Submit"
        android:layout_marginTop="15dp"
        android:textAllCaps="false"
        />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/naviagtion_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/item"

        />
    </RelativeLayout>

</RelativeLayout>